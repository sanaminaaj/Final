package com.example.studentregistration

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.view.View
import android.widget.Button
import android.widget.Toast

class MainActivity : AppCompatActivity() {
    private lateinit var button: Button
    private lateinit var button1: Button
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)
        button = findViewById(R.id.login);
        button.setOnClickListener()
        {
            Toast.makeText(
                applicationContext,
                "This is to verify whether you are a admin or student",
                Toast.LENGTH_LONG
            ).show()
            val intent = Intent(this, MainActivity2::class.java)
            startActivity(intent)
        }
        button = findViewById(R.id.button2)
        button.setOnClickListener()
        {
            Toast.makeText(applicationContext, "This is an About us Page ", Toast.LENGTH_LONG).show()
            val intent = Intent(this, MainActivity4::class.java)
            startActivity(intent)
        }
        button = findViewById(R.id.contactus)
        button.setOnClickListener() {
            Toast.makeText(applicationContext, "This is an Contact us Page ", Toast.LENGTH_LONG).show()
            val intent = Intent(this, Contactus::class.java)
            startActivity(intent)
        }

    }

}
